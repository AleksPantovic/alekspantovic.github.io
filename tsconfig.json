{
  "compilerOptions": {
    "target": "ES2020", // This helps
    "lib": ["es2020", "dom"], // THIS IS THE KEY FOR 'Map' AND BROWSER APIS
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Preferred output directory
    "rootDir": "./"
  },
  "include": [
    "./pluginadapter.ts", // Make sure this path is correct relative to tsconfig.json
    "netlify/functions/**/*.ts",
    "netlify/functions/**/*.mts"
  ],
  "exclude": ["node_modules"]
}