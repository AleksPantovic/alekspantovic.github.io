{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "pluginadapter.ts",
    "netlify/functions/**/*.ts",
    "netlify/functions/**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/*.d.ts"
  ]
}