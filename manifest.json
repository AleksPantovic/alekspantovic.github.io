  "context": ["userName"],
  "config": [
    {
      "key": "spotifyLink",
      "type": "text",
      "label": {
        "en": "Spotify Link",
        "de": "Spotify Link"
      },
      "placeholder": {
        "en": "https://open.spotify.com/album/4RuzGKLG99XctuBMBkFFOC",
        "de": "https://open.spotify.com/album/4RuzGKLG99XctuBMBkFFOC"
      },
      "description": {
        "en": "Enter a spotify link you get through the share menu.",
        "de": "Gib einen Spotify Link, den du über das Teilen-Menu erhältst, ein."
      },
      "pattern": "^https:\\/\\/open\\.spotify\\.com\\/(track|album|playlist)\\/[A-Za-z0-9]+$",
      "required": true
    },
    {
      "key": "spotifyTitle",
      "type": "text",
      "label": {
        "en": "Spotify Title",
        "de": "Spotify Titel"
      },
      "placeholder": {
        "en": "My Favorite Playlist",
        "de": "Meine Lieblingsplaylist"
      },
      "description": {
        "en": "Enter a title for the Spotify embed.",
        "de": "Gib einen Titel für das Spotify-Embed ein."
      },
      "required": false
    },
    {
      "key": "userName",
      "type": "text",
      "label": {
        "en": "User Name",
        "de": "Benutzername"
      },
      "placeholder": {
        "en": "John Doe",
        "de": "Max Mustermann"
      },
      "description": {
        "en": "Enter your user name.",
        "de": "Gib deinen Benutzernamen ein."
      },
      "required": false
    }
  ],
  "entryPoints": [
    {
      "id": "510e9e0c-e3b8-44a8-8db1-5185d3d844ce",
      "name": {
        "en": "Main View",
        "de": "Hauptansicht"
      },
      "description": {
        "en": "Main plugin view",
        "de": "Hauptansicht des Plugins"
      },
      "url": "/"
    }
  ]
